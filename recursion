public class recursion {
public static int factorial(int n){
    if(n==1 || n==0){
        return 1;
    }
    int fact = factorial(n-1);
    int result_fact = n*fact;
    return result_fact;
}


    public static void main(String[]args){
    int n=5;
    int ans=factorial(n);
    System.out.println("the factorial of 5 is "+ans);

    }
}
